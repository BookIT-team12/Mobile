<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        app:cardCornerRadius="8dp"
        android:background="@color/form_figma"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/form_figma"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/authorNameTextView_owner_report_review_accommodation_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Author: "
                android:textColor="@color/white"
                app:drawableLeftCompat="@drawable/nav_person"
                android:textSize="34sp"
                app:drawableTint="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gradeTextView_owner_report_review_accommodation_card"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5sp"
                    android:textColor="@color/white"
                    android:text="Given grade" />

                <TextView
                    android:id="@+id/starsIcon_owner_report_review_accommodation_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5sp"
                    app:drawableLeftCompat="@drawable/hotel_class_fill0_wght400_grad0_opsz24"
                    app:drawableTint="@color/white"/>
            </LinearLayout>
            <TextView
                android:id="@+id/accommodationNameTextView_owner_report_review_accommodation_card"
                android:layout_width="match_parent"
                android:layout_marginVertical="5sp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Accommodation name: " />

            <TextView
                android:id="@+id/commentTextView_owner_report_review_accommodation_card"
                android:layout_width="match_parent"
                android:layout_marginVertical="5sp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Comment: " />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/reportReview_owner_report_review_accommodation_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_btn_red"
                    android:text="Report review" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>