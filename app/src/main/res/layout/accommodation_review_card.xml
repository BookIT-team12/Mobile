<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:background="@color/form_figma"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/form_figma"
            android:orientation="vertical">

            <TextView
                android:id="@+id/accommodationNameTextView_accommodation_review_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accommodation name"
                android:textColor="@color/white"
                app:drawableLeftCompat="@drawable/nav_home"
                android:textSize="34sp"
                app:drawableTint="@color/white" />

            <TextView
                android:id="@+id/authorTextView_accommodation_review_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5sp"
                android:textColor="@color/white"
                android:text="Author: " />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gradeTextView_accommodation_review_card"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5sp"
                    android:textColor="@color/white"
                    android:text="Given grade" />

                <TextView
                    android:id="@+id/starsIcon_accommodation_review_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5sp"
                    app:drawableLeftCompat="@drawable/hotel_class_fill0_wght400_grad0_opsz24"
                    app:drawableTint="@color/white"/>
            </LinearLayout>

            <TextView
                android:id="@+id/commentTextView_accommodation_review_card"
                android:layout_width="match_parent"
                android:layout_marginVertical="5sp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Comment: " />

            <Button
                android:id="@+id/deleteReview_accommodation_review_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete review" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>