<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/drawer_border"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:background="@drawable/header_bkg"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="16dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="13dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logo" /> <!-- Replace with your image -->

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/bookIT_font"
            android:text="BookIT"
            android:textStyle="bold"
            android:textColor="@color/white"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="travel made simple"
            android:fontFamily="@string/bookIT_caption"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"
            />


    </LinearLayout>

    <!-- Home -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_admin"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/logo"
            android:text="Home"
            android:textSize="20sp"
            android:drawableLeft="@drawable/nav_home"
            android:drawablePadding="8dp"
            android:fontFamily="@string/bookIT_caption"
            />

    </LinearLayout>

    <!-- Manage account -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/account_details_admin"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/logo"
            android:text="Manage my account"
            android:textSize="20sp"
            android:drawableLeft="@drawable/nav_person"
            android:drawablePadding="8dp"
            android:fontFamily="@string/bookIT_caption"
            />

    </LinearLayout>

    <!--Manage apartments-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/apartments"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/logo"
            android:text="Manage apartments"
            android:textSize="20sp"
            android:drawableLeft="@drawable/nav_apartment"
            android:drawablePadding="8dp"
            android:fontFamily="@string/bookIT_caption"
            />

    </LinearLayout>

    <!--Manage reviews-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/manage_ratings"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/logo"
            android:text="Manage reviews"
            android:textSize="20sp"
            android:drawableLeft="@drawable/nav_review"
            android:drawablePadding="8dp"
            android:fontFamily="@string/bookIT_caption"
            />



    </LinearLayout>

    <!--Manage user accounts-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/manage_accounts"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/logo"
            android:text="Manage user accounts"
            android:textSize="20sp"
            android:drawableLeft="@drawable/nav_person"

            android:drawablePadding="8dp"
            android:fontFamily="@string/bookIT_caption"
            />



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/berkley_blue"
        android:layout_marginTop="12dp"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logout_admin"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/logo"
            android:text="Log out"
            android:textSize="20sp"
            android:drawableLeft="@drawable/nav_logout"
            android:drawablePadding="8dp"
            android:fontFamily="@string/bookIT_caption"
            />

    </LinearLayout>

</LinearLayout>