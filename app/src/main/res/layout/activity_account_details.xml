<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    layout_width="wrap_content"
    layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context=".AccountDetails"
    android:background="@drawable/lines_bg">




    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"/>


        <!-- Add EditText fields for user input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="60dp"
            android:text="Manage account"
            android:textStyle="bold"
            android:textColor="@color/logo"
            android:textSize="36sp"
/>


        <!-- Username -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textColor="@color/logo"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/editUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Enter username"
            android:text="pera123"
            android:padding="10dp"

            android:textColor="@color/logo"
            android:inputType="text"
            android:background="@drawable/edit_details"
            />

        <!-- Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:layout_marginBottom="10dp"

            android:textColor="@color/logo"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Enter name"
            android:text="Petar"
            android:padding="10dp"

            android:background="@drawable/edit_details"
            android:textColor="@color/logo"
            android:inputType="text"/>

        <!-- Surname -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surname:"
            android:layout_marginBottom="10dp"

            android:textColor="@color/logo"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/editSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"

            android:hint="Enter surname"
            android:text="Petrovic"
            android:inputType="text"
            android:background="@drawable/edit_details"
            android:textColor="@color/logo"/>
        <!-- Phone Number -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number:"
            android:layout_marginBottom="10dp"

            android:textColor="@color/logo"
            android:textStyle="bold"

            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/editPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="50dp"
            android:hint="Enter phone number"
            android:text="0655053140"
            android:background="@drawable/edit_details"
            android:textColor="@color/logo"
            android:inputType="phone"/>







        <!-- Save Changes and Change Password Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <!-- Save Changes Button -->
            <Button
                android:id="@+id/edit_btn"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Save Changes"
                android:layout_marginRight="20dp"/>

            <!-- Change Password Button -->
            <Button
                android:id="@+id/change_password_btn"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Change Password"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start">
        <include layout="@layout/nav_drawer_guest">
        </include>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
