<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/blueSquareContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_card_blueish"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/headerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:text="User overview"
            android:textColor="@color/logo"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/reviewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/reviewItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="9dp"
                android:background="@drawable/rounded_edges_review"
                android:layout_marginBottom="4dp"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ownerIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="8dp"
                        android:contentDescription="Owner Icon"
                        android:src="@drawable/nav_person" />

                    <TextView
                        android:id="@+id/userOverview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User name"
                        android:textColor="@color/logo"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <TextView
                    android:id="@+id/lastNameOverview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last name: user last name" />

                <TextView
                    android:id="@+id/emailOverview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email: user@gmail.com" />

                <TextView
                    android:id="@+id/addressOverview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address: address here" />

                <TextView
                    android:id="@+id/phoneOverview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone: 0123456789" />

            </LinearLayout>
        </LinearLayout>
        <!-- EditText for text input -->
        <EditText
            android:id="@+id/reasonOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:background="@drawable/rounded_edges_review"
            android:inputType="textMultiLine"
            android:lines="4"
            android:hint="Enter reason here" />
        <Button
            android:id="@+id/reportUserBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_marginTop="5sp"
            android:text="Report user" />
    </LinearLayout>
</RelativeLayout>
